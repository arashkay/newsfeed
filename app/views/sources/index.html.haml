%table.table
  %tr
    %th Name
    %th URL
    %th Tag
    %th Category
    %th Actions
  - @sources.each do |source|
    %tr.fn-source{ :class => ( source.is_disabled ? 'error' : '' ) }
      %td= source.name
      %td= source.url
      %td= source.tag.name unless source.tag.blank?
      %td= source.category.name unless source.category.blank?
      %td
        %a.btn{ :href => edit_source_path(source) } Change
        %a.btn.btn-warning{ :data => { :remote => source_path(source), :success => 'feed.sources.disabled' , :method => 'DELETE' } } Disable
        %a.btn.btn-success{ :data => { :remote => enable_source_path(source), :success => 'feed.sources.enabled' , :method => 'POST' } } Enable
