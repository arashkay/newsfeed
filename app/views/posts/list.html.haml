.posts.fn-posts
  - @posts.each do |post|
    .post.fn-post{ :data => { :dbid => post.id } }
      .wrapper
        .thumb.fn-more{ :style => "background-image: url(#{post.image})" }
          %b= post.source.name
          %span= post.title
        .fn-description.secret
          .url
            %a{ :href => post.url, :target => '_blank' }= post.url
          %p= post.summary
        .actions
          %i.icon-chevron-sign-down.fn-more
          .pull-left
            %span.likes.fn-likecount= post.likes
            %i.icon-heart-empty.fn-like{ :data => { :remote => like_post_path(post, :format => :json ), :success => 'feed.posts.liked' } }
            %i.icon-heart.fn-dislike{ :data => { :remote => dislike_post_path(post, :format => :json ), :success => 'feed.posts.liked' } }

