%h4 تگ
= form_for @tag, :html => { :class => 'form form-horizontal' } do |form|
  .control-group
    %label.control-label تگ
    .controls
      %input{ :type => :text, :name => 'tag[name]', :value => @tag.name }
  .control-group
    %label.control-label type
    .controls
      = select :tag, :type_id, [ ['News Source', 1], ['News Category', 2] ], :include_blank => true, :selected => @tag.type_id
  .control-group
    .controls
      %button.btn.btn-primary ثبت
      %a.btn{ :href => sources_path } برگشت
